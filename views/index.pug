extends default

block content
  div.container
    each race in races
      div.race
        div.race-image(style=`background: url('/images/${race.imgSrc}') top center
        no-repeat; background-size: cover;`)
        h2.race-name
          | #{race.name}
        a(href=`/race_information?id=${race.id}`)
          | View detailed race information